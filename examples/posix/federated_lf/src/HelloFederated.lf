target uC

reactor Source {
  output out: char[12]

  timer t(0, 1 sec)

  reaction(t) -> out {=
    lf_set_array(out, "Hello World");
  =}
}

reactor Sink {
  input in: char[12]

  reaction(in) {=
    printf("Received: %s\n" , in->value);
  =}
}

federated reactor {
  src = new Source()
  sink = new Sink()
  src.out -> sink.in
}