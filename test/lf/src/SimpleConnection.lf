target uC {
    platform: Native,
    logging: DEBUG
}

preamble {=
    #define EXPECTED -9
=}

reactor Source {
    output out:int
    timer t(0, 1 sec)
    state s:int = 0
    reaction(t) -> out {=
        lf_set(out, self->s);
        printf("Sent %d @ %lld\n", self->s, env->get_elapsed_logical_time(env));
        self->s++;
    =}
    // reaction(t) -> out {=
    //     int v = -1 * self->s;
    //     lf_set(out, v);
    // =}
}

reactor Sink {
    input in:int
    state last_received:int = 0
    reaction(in) {=
        self->last_received = in->value;
        printf("Received %d @ %lld\n", in->value, env->get_elapsed_logical_time(env));
    =}
    // FIXME: Multiple reactions triggered by the same port does not yet work.
    // reaction(in) {=
    //     printf("Received %d @ %lld\n", in->value, env->get_elapsed_logical_time(env));
    // =}
    reaction(shutdown) {=
        if (self->last_received != EXPECTED) {
            fprintf(stderr, "FAILURE: Expected %d, Received %d\n", EXPECTED, self->last_received);
            exit(1);
        } else {
            printf("Successfully received %d\n", self->last_received);
        }
    =}
}

main reactor {
    source = new Source()
    sink = new Sink()

    @buffer(3)
    source.out -> sink.in after 2 sec
}