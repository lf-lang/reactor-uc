target uC;

reactor Inner {
  output [3] out: int

  reaction(startup) -> out {=
    for (int i =0; i<3; i++) {
      lf_set(out[i], i);
    }
  =}
}

reactor R {
  output [3] out: int

  inner = new Inner()
  inner.out -> out
}


main reactor {
  r = new R()
  state check: bool = false

  reaction(r.out) {=
    for (int i = 0; i<3; i++) {
      validate(r.out[i]->value == i);
    }
    self->check = true;
  =}

  reaction(shutdown) {=
    validate(self->check);
  =}

}