target uC;

reactor Inner {
  input [4] in: int
  state check: bool = false

  reaction(in) {=
    printf("Hello\n");
    for (int i = 0; i<4; i++) {
      validate(in[i]->value == i);
    }
    self->check = true;
  =}

  reaction(shutdown) {=
    validate(self->check);  
  =}
}

reactor R {
  input [4] in:int

  inner = new Inner()
  
  in -> inner.in
}

main reactor {
  r = new [4] R()

  reaction(startup) -> r.in {=
    for (int i = 0; i<4; i++) {
      for (int j = 0; j<4; j++) {
        lf_set(r[i].in[j], j);
      }
    }
  =}
}